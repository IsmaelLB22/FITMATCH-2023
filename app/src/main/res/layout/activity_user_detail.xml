<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_app">

  <ImageView
      android:id="@+id/imageUser"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:scaleType="fitXY"
      android:src="@drawable/baseline_person_24" />

  <TextView
      android:id="@+id/textNameAge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="John Doe, 30"
      android:layout_marginStart="20dp"
      android:textColor="#FFFFFF"
      android:textSize="24sp" />

  <TextView
      android:id="@+id/textDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla facilisi. Sed eget dui ante. Morbi vitae augue lacus. Suspendisse potenti. Sed ac congue sapien. Vestibulum id eleifend nisl."
      android:layout_marginStart="20dp"
      android:textColor="#000000"
      android:textSize="16sp" />

  <FrameLayout
      android:id="@+id/mapView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />

</LinearLayout>
