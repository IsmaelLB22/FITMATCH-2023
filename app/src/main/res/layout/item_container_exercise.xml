<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Barbell Bench Press"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exercise_muscles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Primary muscles worked: Deltoid, Pectoralis major"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exercise_secondary_muscles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Secondary muscles worked: Compound"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exercise_workout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Workout type: Strength"
            android:textSize="16sp" />

        <Button
            android:id="@+id/watch_video_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/primary"
            android:text="Watch video"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>